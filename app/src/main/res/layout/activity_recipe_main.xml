<?xml version="1.0" encoding="utf-8"?>
<!--in this we are displaying a nested scroll view-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRecipeMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".RecipeMain"
    >

    <ImageButton
        android:id="@+id/buttonSearch"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#98D2FF"
        android:elevation="6dp"
        android:gravity="center_horizontal"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/textSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSearch"
        android:gravity="center"
        android:text="^Search^"
        android:textColor="#000000"
        android:textSize="25dp" />

    <ImageButton
        android:id="@+id/buttonRandom"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/textSearch"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#98D2FF"
        android:elevation="6dp"
        android:gravity="center"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/textRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRandom"
        android:gravity="center"
        android:text="^Random Generator^"
        android:textColor="#000000"
        android:textSize="25dp" />

</RelativeLayout>